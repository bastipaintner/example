<%##############################################################################
# view for control_pages                                                       #
# stream elements for stream page                                              #
#                                                                              #
# author: Sebastian Paintner                                                   #
#                                                                              #
# path: app/views/control_pages/_stream_element.html.erb                       #
##############################################################################%>
<div class="row">
  <% for i in 1..8 %>
    <% if i == 1 || i == 5 %>
      <div class="stream_container">
    <% end %>
      <div class="stream_element  <%= @mode %>">
        <%= image_tag "loading.gif", class: "loading" %>
        <%= image_tag getImgPath(i), id: getImgId(i),
          class: "stream_img"%>
      </div>
    <% if i == 4 || i == 8 %></div><% end %>
  <% end %>
</div>
